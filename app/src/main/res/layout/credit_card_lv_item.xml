<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/cardIcon"
        android:layout_width="69dp"
        android:layout_height="64dp"
        android:background="@drawable/custom_shape_lv_item_corners_left"
        app:srcCompat="@mipmap/ic_card_white_bigger_foreground"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_grey"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cardPersonNameLvItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/creditCard_personName"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardNumberLvItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/creditcard_number"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/custom_shape_lv_item_right_corners"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:id="@+id/changeCardDetailsBtn"
            android:layout_width="45dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/color_white"
            android:drawableLeft="@drawable/ic_baseline_edit__red_24"
            android:text="@string/change_cardDetails_btn"
            android:textColor="@color/colorPrimary"
            android:textSize="5dp" />

            <Button
                android:id="@+id/deleteCard"
                android:layout_width="45dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/color_white"
                android:drawableLeft="@drawable/ic_baseline_delete_24"
                android:text="@string/change_cardDetails_btn"
                android:textColor="@color/colorPrimary"
                android:textSize="5dp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/cardCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/color_white"
            android:paddingRight="10dp"
            android:text="@string/creditcard_item_checkbox"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:textSize="10dp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>